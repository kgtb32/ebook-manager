{
  "build": {
    "beforeDevCommand": "bash dev.sh",
    "beforeBuildCommand": "bash build.sh",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/ebook-manager/browser"
  },
  "package": {
    "productName": "ebook-manager",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "bin/build/backend",
            "sidecar": true
          }
        ],
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "ebook-manager",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "externalBin": [
        "bin/build/backend"
      ],
      "active": true,
      "targets": "all",
      "identifier": "com.github.kgtb32.ebook-manager",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}